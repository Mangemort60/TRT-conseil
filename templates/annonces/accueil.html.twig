{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

    <h1 class="text-center m-4">{{ title }}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Poste</th>
            <th scope="col">Lieu de travail</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        <tbody>
{#        boucle pour afficher chaque annonce#}
        {% for annonce in annonces %}
{#          loop.index pour alterner les couleurs du tableau#}
        <tr class="table-{%if loop.index is odd  %}light{% else %}dark{% endif %}">
            <th scope="row">{{ annonce.poste }}</th>
            <td>{{ annonce.lieuDeTravail }}</td>
            <td>{{ annonce.description }}</td>
            <td><button class="btn btn-success">Postuler</button></td>
            {% if is_granted('ROLE_RECRUTEUR') %}
            <td><button class="btn btn-success">Ajouter</button></td>
            {% endif %}
        </tr>
        {% endfor %}


        </tbody>
    </table>

{% endblock %}

